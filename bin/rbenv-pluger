#!/usr/bin/env bash 
#
# Summary: manage rbenv plugins like rbenv mangage rubies
# 
# Usage: rbenv pluger [list]
#        rbenv pluger install ruby-build
#        rbenv pluger remove ruby-build 

set -e 
action=${1:-list} 

#required
[ -n "$RBENV_ROOT" -a -d "$RBENV_ROOT" ] || {echo No $RBENV_ROOT && exit 1}
rbenv_root=$RBENV_ROOT
plugins_root=$RBENV_ROOT/plugins && mkdir -p $plugins_root

case "$action" in
  list)
    ls -l $plugins_root
    ;;
  *)
    ;;
esac
